<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "name", "Post Name" %>
    <%= form.text_field "name" %>
  </p>
  <p>
    <%= form.label "date", "Activity date" %>
    <%= form.text_field "date" %>
  </p>
  <p>
    <%= form.label "description", "Description" %>
    <%= form.text_field "description" %>
  </p>
  <%= form.submit %>
<% end %>